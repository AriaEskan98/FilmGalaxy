@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-secondary text-white text-center py-4 rounded-top-4">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body p-5">
            <h3 class="text-center text-secondary mb-4">Create a New Account</h3>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating col-md-12">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Input.Name" class="form-control" placeholder="Full Name" />
                    <label asp-for="Input.Name">Full Name</label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Input.StreetAddress" class="form-control" placeholder="Street Address" />
                    <label asp-for="Input.StreetAddress">Street Address</label>
                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Input.City" class="form-control" placeholder="City" />
                    <label asp-for="Input.City">City</label>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Input.State" class="form-control" placeholder="State" />
                    <label asp-for="Input.State">State</label>
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Input.PostalCode" class="form-control" placeholder="Postal Code" />
                    <label asp-for="Input.PostalCode">Postal Code</label>
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-12">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                        <option disabled selected>-Select Role-</option>
                    </select>
                    <label asp-for="Input.Role">Role</label>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100 py-2 rounded-3">Register</button>
                </div>
            </form>

            <div class="my-4 d-flex align-items-center">
                <hr class="flex-grow-1">
                <span class="mx-3 text-muted">or</span>
                <hr class="flex-grow-1">
            </div>

            <h5 class="text-center text-secondary mb-3">Use another service to register</h5>
            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <p class="text-center text-danger">No external authentication services configured.</p>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-primary me-2" name="provider" value="@provider.Name">@provider.DisplayName</button>
                    }
                </form>
            }
        </div>
    </div>
    </section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
