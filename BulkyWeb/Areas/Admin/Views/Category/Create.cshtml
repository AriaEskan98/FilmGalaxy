@model CreateCategoryDTO
<div class="container mt-5">
    <div class="card shadow border-0 mt-3">
        <div class="card-header bg-secondary bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white py-2">Create New Category</h3>
                </div>

            </div>
            
        </div>
        <div class="card-body">
            <form class="row" asp-action="Create" asp-controller="Category" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12 mb-3">
                    <input asp-for="Name" class="form-control border-0 shadow" placeholder="Enter category name" />
                    <label asp-for="Name" class="form-label ms-2">Category Name</label>
                   
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="DisplayOrder" type="number" class="form-control border-0 shadow" placeholder="Enter display order" />
                    <label asp-for="DisplayOrder" class="form-label ms-2">Display Order</label>
                   
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" asp-controller="Category" class="btn btn-outline-primary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}