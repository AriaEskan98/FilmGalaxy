@model List<GetMovieDTO>

<div class="container mt-5  mb-3">
	<div class="card shadow border-0 mt-3">
		<div class="card-header bg-secondary bg-gradient py-3">
			<div class="row">
				<div class="col-12 text-center">
					<h3 class="text-white py-2">Movie List</h3>
				</div>

			</div>

		</div>
		<div class="card-body">
			<div class="row pb-3">
				<div class="col-6">
				</div>
				<div class="col-6 text-end">
					<a asp-area="Admin" asp-controller="Movie" asp-action="Upsert" class="btn btn-primary" role="button"><i class="bi bi-patch-plus"></i> Create New Movie</a>
				</div>
			</div>
			<table id="tblData" class="table table-bordered table-striped">
				<thead>
					<tr>
						
						<th>Movie Name</th>
						<th>Movie Description</th>
						<th>Movie Director</th>
						<th>Movie Date</th>
						<th>Category</th>
						<th>Movie ListPrice</th>
						<th></th>
					</tr>
				</thead>
				
			</table>
		</div>
	</div>
</div>

@section scripts{
	<script src="~/js/movie.js"></script>
}